  <div class = "container px5 px-sm-0">
    <div class = "row">
      <div class = "col-md-3">
        <h2>User info</h2>
         <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class = "table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
            <tr>
              <th>follwer</th>
              <th><%= link_to user.followings.count, followings_user_path(user) %></th>
            </tr>
            <tr>
              <th>followers</th>
              <th><%= link_to user.followers.count, followers_user_path(user) %></th>
            </tr>
            <tr>
              <th>    
                <% if current_user != user %>
                <!--indexには必要ないかも？-->
                  <% if user.is_followed_by?(current_user) %>
                    <%= link_to user_relationships_path(user), method: :delete do %>
                    <button class = "btn btn-danger">フォロー解除</button>
                   <% end %>
                   <% else %>
                  <%= link_to user_relationships_path(user), method: :post do %>
                  <button class = "btn btn-primary">フォロー</button>
                   <% end %>
                  <% end %>
                <% end %>
              </th>
            </tr>
          </tbody>
        </table>
         <div class = "row">
          <%= link_to "",edit_user_path(user),class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
         </div>

           <h2>New book</h2>
           <!--入力フォーム-->
           <%= form_with model: book,local: true do |f| %>
           　<%= f.label :title %><br>
           　<%= f.text_field :title %><br>
           　<%= f.label :Opinion %><br>
           　<%= f.text_area :body %>
           　<%= f.submit 'Create Book', class:"btn btn-success" %>
           <% end %>
      </div>
  <div class = "col-md-8 offset-md-1">