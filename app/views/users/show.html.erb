<body>
<main>
<%= render 'books/book',books:@books,user:@user,book:@book %>
<!--User一覧画面-->
　<h2>Books</h2>
　 <table class = "table" >
 　　　　 <thead>
   　    <th></th>
   　    <th>Title</th>
    　　  <th>Opinion</th>
       </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
       <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"),user_path(book.user.id) %>
      </td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
      <% end %>
    </tr>
    </tbody>
   </table>
</body>